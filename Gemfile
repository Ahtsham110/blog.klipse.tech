source "https://rubygems.org"

# Windows does not include zoneinfo files, so bundle the tzinfo-data gem
gem 'tzinfo-data', platforms: [:mingw, :mswin, :x64_mingw, :jruby]

gem 'jekyll'
gem 'coderay'
gem 'pygments.rb'
gem 'rake-jekyll'
gem 'kramdown'
gem 'kramdown-parser-gfm'


group :jekyll_plugins do
  gem 'jekyll-paginate'
  gem 'jekyll-seo-tag'
  gem 'jekyll-sitemap'
  gem 'jekyll-asciidoc'
end

